---
import type { CollectionEntry } from 'astro:content';

interface Props {
  prevPost: CollectionEntry<'posts'> | null;
  nextPost: CollectionEntry<'posts'> | null;
  prevLabel: string;
  nextLabel: string;
}

const { prevPost, nextPost, prevLabel, nextLabel } = Astro.props;

// Helper to extract base slug from full slug
const getBaseSlug = (slug: string) => {
  const parts = slug.split('/');
  return parts.slice(1).join('/');
};
---

{(prevPost || nextPost) && (
  <nav class="post-navigation" aria-label="Post navigation">
    <div class="nav-container">
      {prevPost ? (
        <a href={`/posts/${prevPost.slug}`} class="nav-link prev" rel="prev">
          <span class="nav-direction">&larr; {prevLabel}</span>
          <span class="nav-title">{prevPost.data.title}</span>
        </a>
      ) : (
        <div class="nav-link-placeholder"></div>
      )}

      {nextPost ? (
        <a href={`/posts/${nextPost.slug}`} class="nav-link next" rel="next">
          <span class="nav-direction">{nextLabel} &rarr;</span>
          <span class="nav-title">{nextPost.data.title}</span>
        </a>
      ) : (
        <div class="nav-link-placeholder"></div>
      )}
    </div>
  </nav>
)}

<style>
  .post-navigation {
    margin-top: var(--spacing-12);
    padding-top: var(--spacing-8);
    border-top: var(--border-width-thin) solid var(--color-border-secondary);
  }

  .nav-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-8);
  }

  @media (max-width: 768px) {
    .nav-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-4);
    }
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    padding: var(--spacing-6);
    border: var(--border-width-medium) dashed var(--color-border-primary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--duration-normal) var(--ease-in-out);
    background: var(--color-bg-primary);
    box-shadow: var(--shadow-sm);
  }

  .nav-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .nav-link.prev {
    text-align: left;
  }

  .nav-link.next {
    text-align: right;
  }

  .nav-direction {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-link:hover .nav-direction {
    color: var(--color-primary-cyan);
  }

  .nav-title {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
    line-height: var(--line-height-normal);
  }

  .nav-link-placeholder {
    /* Takes up space in the grid when there's no prev/next post */
  }
</style>
