---
import '../styles/global.css';
import { languages, useTranslations, type Language } from '../utils/i18n';
import { getRelativeLocaleUrl } from 'astro:i18n';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  // For post pages: which languages have translations
  availableLanguages?: Language[];
  // For post pages: the base slug to construct URLs
  postSlug?: string;
}

const {
  title,
  description,
  lang = 'en',
  availableLanguages,
  postSlug,
} = Astro.props;

const pageTitle = `${title} | EasyDiagrams`;
const currentLocale = (Astro.currentLocale || 'en') as Language;
const t = useTranslations(currentLocale);

// Get pathname without locale prefix for language switching
const getPathWithoutLocale = (pathname: string, locale: string) => {
  if (locale === 'en') return pathname;
  const localePrefix = `/${locale}`;
  return pathname.startsWith(localePrefix)
    ? pathname.slice(localePrefix.length) || '/'
    : pathname;
};

const pathWithoutLocale = getPathWithoutLocale(Astro.url.pathname, currentLocale);

// Function to generate target URL for a given language
const getTargetUrl = (targetLang: Language): string => {
  if (postSlug) {
    // On post page: link to same post in target language
    return `/posts/${targetLang}/${postSlug}`;
  } else {
    // On other pages: use i18n routing
    return getRelativeLocaleUrl(targetLang, pathWithoutLocale);
  }
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="font-sans leading-normal m-0 p-0">
    <header class="bg-bg-primary border-b border-dotted">
      <nav class="max-w-screen-xl mx-auto px-3 md:px-6 lg:px-8 py-2 md:py-3 flex justify-between items-center gap-4 md:gap-8 min-h-[64px] md:min-h-[80px]">
        <a href={getRelativeLocaleUrl(currentLocale, '/')} class="flex items-center gap-3 no-underline">
          <img src="/logo.svg" alt="EasyDiagrams" class="h-12" />
        </a>
        <div class="flex gap-3 md:gap-3 flex-1">
          <a href={getRelativeLocaleUrl(currentLocale, '/')} class="nav-link">{t('nav.home')}</a>
          <a href={getRelativeLocaleUrl(currentLocale, '/posts')} class="nav-link">{t('nav.posts')}</a>
          <a href={getRelativeLocaleUrl(currentLocale, '/tags')} class="nav-link">{t('nav.tags')}</a>
        </div>
        <LanguageSwitcher
          currentLang={currentLocale}
          availableLanguages={availableLanguages}
          postSlug={postSlug}
          getTargetUrl={getTargetUrl}
        />
      </nav>
    </header>
    <main class="max-w-screen-xl mx-auto px-4 py-4 md:px-4 md:py-4 lg:px-6 lg:py-6 min-h-[calc(100vh-200px)]">
      <slot />
    </main>
    <footer class="bg-bg-primary border-t border-dotted px-2 md:px-3 lg:px-4 py-4 text-center mt-16">
      <p class="text-text-secondary text-sm">&copy; {new Date().getFullYear()} EasyDiagrams. Content licensed under CC BY-SA 4.0, Code under MIT.</p>
    </footer>
  </body>
</html>

<style>
  .logo-icon {
    width: 48px;
    height: 48px;
    background-color: var(--color-primary-yellow);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
  }

  .logo-text {
    color: var(--color-primary-orange);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    letter-spacing: 0.05em;
  }

  .nav-link {
    color: var(--color-text-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--duration-fast) var(--ease-in-out);
  }

  .nav-link:hover {
    color: var(--color-primary-cyan);
  }

  .border-dotted {
    border-color: var(--color-border-dotted);
  }
</style>
