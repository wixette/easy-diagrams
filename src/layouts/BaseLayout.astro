---
import '../styles/global.css';
import { languages, useTranslations, type Language } from '../utils/i18n';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  // For post pages: which languages have translations
  availableLanguages?: Language[];
  // For post pages: the base slug to construct URLs
  postSlug?: string;
}

const {
  title,
  description,
  lang = 'en',
  availableLanguages,
  postSlug,
} = Astro.props;

const pageTitle = `${title} | EasyDiagrams`;
const currentLocale = (Astro.currentLocale || 'en') as Language;
const t = useTranslations(currentLocale);

// Get pathname without locale prefix for language switching
const getPathWithoutLocale = (pathname: string, locale: string) => {
  if (locale === 'en') return pathname;
  const localePrefix = `/${locale}`;
  return pathname.startsWith(localePrefix)
    ? pathname.slice(localePrefix.length) || '/'
    : pathname;
};

const pathWithoutLocale = getPathWithoutLocale(Astro.url.pathname, currentLocale);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="font-sans leading-normal text-gray-800 m-0 p-0">
    <header class="bg-gray-800 text-white px-8 py-4 shadow-md">
      <nav class="max-w-screen-xl mx-auto flex justify-between items-center gap-8">
        <a href={getRelativeLocaleUrl(currentLocale, '/')} class="flex items-center text-white no-underline">
          <img src="/logo.svg" alt="EasyDiagrams" class="h-12" />
        </a>
        <div class="flex gap-6 flex-1">
          <a href={getRelativeLocaleUrl(currentLocale, '/')} class="text-white no-underline transition-opacity hover:opacity-80">{t('nav.home')}</a>
          <a href={getRelativeLocaleUrl(currentLocale, '/posts')} class="text-white no-underline transition-opacity hover:opacity-80">{t('nav.posts')}</a>
          <a href={getRelativeLocaleUrl(currentLocale, '/tags')} class="text-white no-underline transition-opacity hover:opacity-80">{t('nav.tags')}</a>
        </div>
        <div class="flex gap-3 items-center">
          {Object.entries(languages).map(([code, name]) => {
            const targetLang = code as Language;
            const isActive = targetLang === currentLocale;

            // Check if this language is available
            const isAvailable = !availableLanguages || availableLanguages.includes(targetLang);

            // Generate URL based on context
            let targetUrl: string;
            if (postSlug) {
              // On post page: link to same post in target language
              targetUrl = `/posts/${targetLang}/${postSlug}`;
            } else {
              // On other pages: use i18n routing
              targetUrl = getRelativeLocaleUrl(targetLang, pathWithoutLocale);
            }

            return (
              <a
                href={isAvailable ? targetUrl : '#'}
                class:list={[
                  'text-white/80 no-underline text-sm px-2 py-1 rounded transition-all',
                  'hover:bg-white/10 hover:text-white',
                  { 'bg-white/20 text-white font-semibold': isActive },
                  { 'opacity-40 cursor-not-allowed pointer-events-none': !isAvailable }
                ]}
                aria-disabled={!isAvailable}
                title={!isAvailable ? `Not available in ${name}` : undefined}
              >
                {name}
              </a>
            );
          })}
        </div>
      </nav>
    </header>
    <main class="max-w-screen-xl mx-auto px-8 py-8 min-h-[calc(100vh-200px)]">
      <slot />
    </main>
    <footer class="bg-gray-100 px-8 py-8 text-center text-gray-500 text-sm mt-16">
      <p>&copy; {new Date().getFullYear()} EasyDiagrams. Content licensed under CC BY-SA 4.0, Code under MIT.</p>
    </footer>
  </body>
</html>
