---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../utils/i18n';

const lang = Astro.currentLocale || 'ja';
const t = useTranslations(lang);

// Get all posts in current language (posts in ja/ folder)
const allPosts = await getCollection('posts', ({ slug }) => {
  return slug.startsWith(`${lang}/`);
});

// Get featured posts
const featuredPosts = allPosts
  .filter((post) => post.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

// Get recent posts
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);
---

<BaseLayout
  title="ホーム"
  description="図表と動画で基本概念を視覚化"
  lang={lang}
>
  <div class="home">
    <section class="hero">
      <div class="hero-content">
        <div class="text-overlay">
          <p class="tagline">
            {t('home.tagline')}
          </p>
          <p class="description">
            {t('home.description')}
          </p>
        </div>
      </div>
    </section>

    {featuredPosts.length > 0 && (
      <section class="featured">
        <h2>{t('home.featured')}</h2>
        <div class="posts-grid">
          {featuredPosts.map((post) => (
            <article class="post-card featured-card">
              {post.data.heroImage && (
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="hero-image"
                />
              )}
              <div class="post-content">
                <h3>
                  <a href={`/posts/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>
                <p class="description">{post.data.description}</p>
                <div class="tags">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>
        <div class="view-all">
          <a href="/ja/posts">{t('home.viewAll')} →</a>
          <span class="separator">•</span>
          <a href="/ja/tags">タグで探索 →</a>
        </div>
      </section>
    )}

    <section class="recent">
      <h2>{t('home.recent')}</h2>
      <div class="posts-grid">
        {recentPosts.map((post) => (
          <article class="post-card">
            <div class="post-content">
              <h3>
                <a href={`/posts/${post.slug}`}>
                  {post.data.title}
                </a>
              </h3>
              <p class="description">{post.data.description}</p>
              <div class="meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString(lang)}
                </time>
                <div class="tags">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
      <div class="view-all">
        <a href="/ja/posts">{t('home.viewAll')} →</a>
        <span class="separator">•</span>
        <a href="/ja/tags">タグで探索 →</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .home {
    margin: 0 auto;
  }

  /* Hero section with 3.5:1 background image - full width shocking design */
  .hero {
    position: relative;
    width: 100%;
    max-width: 2000px; /* Match actual image width */
    margin-left: auto;
    margin-right: auto;
    background-image: url('/bk-1.jpg');
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    margin-bottom: var(--spacing-12);
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      margin-bottom: var(--spacing-16);
    }
  }

  /* Responsive aspect ratio - taller on mobile for text space */
  .hero::before {
    content: '';
    display: block;
    padding-top: 45%; /* ~2.2:1 aspect ratio on mobile for more vertical space */
  }

  @media (min-width: 768px) {
    .hero::before {
      padding-top: 28.57%; /* 3.5:1 aspect ratio on tablet and desktop */
    }
  }

  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Bottom alignment */
    align-items: flex-end; /* Right alignment */
    padding: var(--spacing-3) 0 var(--spacing-3) var(--spacing-3);
    text-align: right;
  }

  @media (min-width: 768px) {
    .hero-content {
      padding: var(--spacing-6) 0 var(--spacing-6) var(--spacing-6);
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding: var(--spacing-8) 0 var(--spacing-8) var(--spacing-12);
    }
  }

  /* Single unified overlay - no rounded corners, extends to right edge */
  .text-overlay {
    background: rgba(0, 0, 0, 0.6); /* Semi-transparent dark overlay */
    padding: var(--spacing-3) var(--spacing-3) var(--spacing-3) var(--spacing-4);
    backdrop-filter: blur(4px); /* Modern blur effect */
    /* No border-radius - sharp corners */
    max-width: 95%;
  }

  @media (min-width: 768px) {
    .text-overlay {
      padding: var(--spacing-4) var(--spacing-6) var(--spacing-4) var(--spacing-6);
      max-width: 750px;
    }
  }

  @media (min-width: 1024px) {
    .text-overlay {
      padding: var(--spacing-5) var(--spacing-8) var(--spacing-5) var(--spacing-8);
    }
  }

  .tagline {
    font-size: var(--font-size-base);
    color: white;
    margin-bottom: var(--spacing-2);
    font-weight: var(--font-weight-bold);
    line-height: 1.2;
    text-shadow: none;
  }

  @media (min-width: 768px) {
    .tagline {
      font-size: var(--font-size-3xl);
      line-height: var(--line-height-tight);
      margin-bottom: var(--spacing-3);
    }
  }

  @media (min-width: 1024px) {
    .tagline {
      font-size: var(--font-size-4xl);
    }
  }

  /* Specific selector for hero description to avoid affecting post cards */
  .hero-content .description {
    font-size: 0.625rem; /* Extra small ~10px for mobile */
    color: white;
    margin: 0;
    line-height: 1.4;
    text-shadow: none;
  }

  @media (min-width: 768px) {
    .hero-content .description {
      font-size: var(--font-size-sm);
      line-height: var(--line-height-normal);
    }
  }

  @media (min-width: 1024px) {
    .hero-content .description {
      font-size: var(--font-size-base);
    }
  }

  /* Constrain featured and recent sections */
  .featured,
  .recent {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: var(--spacing-4);
    padding-right: var(--spacing-4);
  }

  .cta {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    padding: var(--spacing-3) var(--spacing-6);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: all var(--duration-fast) var(--ease-in-out);
    display: inline-block;
    font-size: var(--font-size-base);
  }

  .button.primary {
    background: var(--color-primary-orange);
    color: white;
  }

  .button.primary:hover {
    background-color: #e67a2e;
    transform: translateY(-2px);
  }

  .button.secondary {
    background: white;
    color: var(--color-primary-cyan);
    border: var(--border-width-medium) solid var(--color-primary-cyan);
  }

  .button.secondary:hover {
    background: var(--color-bg-tag);
  }

  section {
    margin-bottom: var(--spacing-16);
  }

  h2 {
    font-size: var(--font-size-3xl);
    color: var(--color-primary-orange);
    margin-bottom: var(--spacing-6);
    font-weight: var(--font-weight-bold);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-8);
    }
  }

  .post-card {
    background: var(--color-bg-primary);
    border-radius: var(--radius-lg);
    border: var(--border-width-medium) dashed var(--color-border-primary);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--duration-normal) var(--ease-in-out);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .featured-card {
    border-color: var(--color-primary-orange);
  }

  .hero-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: var(--spacing-6);
  }

  h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-3);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
  }

  h3 a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-in-out);
  }

  h3 a:hover {
    color: var(--color-primary-cyan);
  }

  .post-card .description {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-4);
    line-height: var(--line-height-normal);
    font-size: var(--font-size-base);
  }

  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-sm);
    flex-wrap: wrap;
    gap: var(--spacing-2);
  }

  time {
    color: var(--color-text-light);
  }

  .tags {
    display: flex;
    gap: var(--spacing-2);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-bg-tag);
    color: var(--color-text-primary);
    padding: var(--spacing-1) var(--spacing-3);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .view-all {
    text-align: center;
    margin-top: var(--spacing-8);
    display: flex;
    gap: var(--spacing-3);
    justify-content: center;
    align-items: center;
  }

  .view-all a {
    color: var(--color-primary-cyan);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-base);
    transition: opacity var(--duration-fast) var(--ease-in-out);
  }

  .view-all a:hover {
    text-decoration: underline;
    opacity: 0.7;
  }

  .view-all .separator {
    color: var(--color-text-light);
    font-size: var(--font-size-base);
  }
</style>
