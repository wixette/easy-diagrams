---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../utils/i18n';

const lang = Astro.currentLocale || 'ja';
const t = useTranslations(lang);

// Get all posts in the current language
const allPosts = await getCollection('posts', ({ slug }) => {
  return slug.startsWith(`${lang}/`);
});

// Sort by date, most recent first
const sortedPosts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title={t('nav.posts')} lang={lang}>
  <div class="posts-page">
    <h1>{t('nav.posts')}</h1>
    <div class="posts-grid">
      {sortedPosts.map((post) => (
        <article class="post-card">
          {post.data.heroImage && (
            <img src={post.data.heroImage} alt={post.data.title} class="hero-image" />
          )}
          <div class="post-content">
            <h2>
              <a href={`/posts/${post.slug}`}>
                {post.data.title}
              </a>
            </h2>
            <p class="description">{post.data.description}</p>
            <div class="meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString(lang)}
              </time>
              <div class="tags">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .posts-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-8);
    color: var(--color-text-primary);
    font-weight: var(--font-weight-bold);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-8);
    }
  }

  .post-card {
    background: var(--color-bg-primary);
    border-radius: var(--radius-lg);
    border: var(--border-width-medium) dashed var(--color-border-primary);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--duration-normal) var(--ease-in-out);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .hero-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: var(--spacing-6);
  }

  h2 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-3);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
  }

  h2 a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-in-out);
  }

  h2 a:hover {
    color: var(--color-primary-cyan);
  }

  .description {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-4);
    line-height: var(--line-height-normal);
  }

  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-sm);
    flex-wrap: wrap;
    gap: var(--spacing-2);
  }

  time {
    color: var(--color-text-light);
  }

  .tags {
    display: flex;
    gap: var(--spacing-2);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-bg-tag);
    color: var(--color-text-primary);
    padding: var(--spacing-1) var(--spacing-3);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }
</style>
