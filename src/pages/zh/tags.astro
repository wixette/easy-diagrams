---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../utils/i18n';

const lang = Astro.currentLocale || 'zh';
const t = useTranslations(lang);

const allPosts = await getCollection('posts', ({ slug }) => {
  return slug.startsWith(`${lang}/`);
});

// Collect all unique tags with post counts
const tagCounts = new Map<string, number>();
allPosts.forEach((post) => {
  post.data.tags.forEach((tag) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by count (descending) and then alphabetically
const sortedTags = Array.from(tagCounts.entries())
  .sort((a, b) => {
    if (b[1] !== a[1]) return b[1] - a[1];
    return a[0].localeCompare(b[0]);
  });
---

<BaseLayout title={t('nav.tags')} lang={lang}>
  <div class="tags-page">
    <h1>{t('nav.tags')}</h1>
    <p class="subtitle">按主题浏览文章</p>

    <div class="tags-cloud">
      {sortedTags.map(([tag, count]) => {
        const slug = tag.toLowerCase().replace(/\s+/g, '-');
        const size = Math.min(2.5, 1 + (count / 10));
        return (
          <a
            href={`/zh/tags/${slug}`}
            class="tag-item"
            style={`font-size: ${size}rem;`}
          >
            {tag}
            <span class="count">({count})</span>
          </a>
        );
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .tags-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #111827;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 3rem;
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .tag-item {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
    line-height: 1.5;
  }

  .tag-item:hover {
    color: #1e40af;
  }

  .count {
    font-size: 0.7em;
    color: #9ca3af;
    font-weight: normal;
  }
</style>
